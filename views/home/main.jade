extends ../layout

block content

  .hero-unit.text-center
    form(action='/subtitles/search', class='form-search')
      input(type='text', name='q', class='input-big search-query')
      button(type='submit',class='btn') Search

  .row
    div.span5.text-center
      p Or watch latest..
    div.span5.text-center
      a(data-toggle='modal', data-target='#newEpisodeDialog', class='btn btn-primary btn-lg') Or upload new episode


block post-body

  .modal.hide.fade(id='newEpisodeDialog', tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog
      .modal-content
        form(action='/episodes/new', method='post', enctype='multipart/form-data', class='form-horizontal')
          .modal-header
            button(type='button', class='close', data-dismiss='modal', aria-hidden='true')Ã—
            h4.modal-title Upload new episode
          .modal-body

            .control-group
              label(for='show', class='control-label') Show
              .controls
                select(name='show', required)
                  option(value='') Pick a show
                  for show in shows
                    option(value='#{show.id}') #{show.name}

            .control-group
              label(for='season', class='control-label') Season
              .controls
                input(type='text', name='season', required)

            .control-group
              label(for='episode', class='control-label') Episode
              .controls
                input(type='text', name='episode', required)

            .control-group
              label(for='video', class='control-label') Video (.mp4 format)
              .controls
                input(type='file', name='video', placeholder='Episode', required)

            .control-group
              label(for='subtitle', class='control-label') Subtitle (.srt format)
              .controls
                input(type='file', name='subtitle', placeholder='Episode', required)

          .modal-footer
            button(type='submit', class='btn btn-success') Submit


block post-script
script(type='text/javascript')
    $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); } );
