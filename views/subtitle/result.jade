extends ../layout

block content

  .row.text-right
    p
      h3 #{stats.n} results (#{stats.timeMicros / 1000000} seconds)

  .row.search-results
    for result in results
      .row
        .col-md-2.col-md-offset-2
          p
            a(href='#{showUrl(result.showId)}') #{result.show}

        .col-md-8
          blockquote
            p
              em "#{result.text}"
            small Someone famous at #{result.strTime}
            a(href='#{episodeUrl(result.video,result.seconds)}') episode #{result.number} of season #{result.season}

