extends layout

block content

  .row.text-center
    input(type='text')
    button Search

  .row
    div.span4
      p Or watch latest..
    div.span5
      a(data-toggle='modal', data-target='#newEpisodeDialog', class='btn btn-primary btn-lg') Or upload new episode


block post-body

  .modal.fade(id='newEpisodeDialog', tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button(type='button', class='close', data-dismiss='modal', aria-hidden='true')Ã—
          h4.modal-title Upload new episode
        .modal-body
          div
            form(action='/episodes/new', method='post', enctype='multipart/form-data')
              input(type='file', name='episode')
              button(type='submit', class='btn') Submit

        .modal-footer
          button(type='button', class='btn btn-success') Success


